<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:id="toastPane" style="-fx-background-color: #2C2F33; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 8, 0, 0, 4); -fx-padding: 10;"
           fx:controller="net.abdellahhafid.smartfaceaccess.controllers.ToastController"
           prefWidth="350" prefHeight="60">

    <Label fx:id="toastMessage" style="-fx-text-fill: white; -fx-font-size: 16; -fx-wrap-text: false; -fx-text-overrun: ellipsis;"
           maxWidth="320" />
</StackPane>



